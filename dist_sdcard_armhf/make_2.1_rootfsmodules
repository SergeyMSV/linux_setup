#!/bin/bash

#2021-08-06

if [ -z $3 ]
then
echo Error: wrong arguments.
exit 0
fi

varKernelBuildDir=$1
varBuildRootFSDir=$2
varBuildDir=$3

echo 
echo "ROOT-FS modules"
echo "Build dir.:         "$varBuildDir
echo "Root-FS dir.:       "$varBuildRootFSDir
echo "Kernel Build dir.:  "$varKernelBuildDir
echo 

echo
echo 1. Install modules into ROOT-FS

cd $varKernelBuildDir
make ARCH=arm INSTALL_MOD_PATH=$varBuildRootFSDir modules_install > $varBuildDir/modules_install.log

